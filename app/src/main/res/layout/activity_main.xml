<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLinerLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.example.blabalhk.JoystickView
        android:id="@+id/joystickView"
        android:layout_width="110dp"
        android:layout_height="102dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.example.blabalhk.JoystickView
        android:id="@+id/joystickView2"
        android:layout_width="110dp"
        android:layout_height="102dp"
        app:layout_constraintBottom_toBottomOf="@+id/joystickView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/joystickView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/powerTextView1"
        android:layout_width="58dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/joystickView"
        app:layout_constraintStart_toEndOf="@+id/angleTextView1" />

    <TextView
        android:id="@+id/powerTextView2"
        android:layout_width="126dp"
        android:layout_height="34dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/joystickView2"
        app:layout_constraintEnd_toStartOf="@+id/angleTextView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/powerTextView1" />

    <TextView
        android:id="@+id/angleTextView1"
        android:layout_width="143dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/joystickView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/powerTextView2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/angleTextView2"
        android:layout_width="82dp"
        android:layout_height="24dp"
        android:layout_marginStart="384dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/joystickView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/powerTextView1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="101dp"
        android:layout_height="102dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/joystickView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/joystickView"
        app:layout_constraintTop_toBottomOf="@+id/joystickView"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/button"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:background="@color/button"
            android:backgroundTint="@color/button"
            android:text="^"
            android:visibility="visible"
            app:iconTint="@color/button"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button_left"
            android:layout_width="33dp"
            android:layout_height="32dp"
            android:background="@color/button"
            android:backgroundTint="@color/button"
            android:text="Button"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_right"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:background="@color/button"
            android:backgroundTint="@color/button"
            android:text="Button"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_down"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:background="@color/button"
            android:backgroundTint="@color/button"
            android:text="Button"
            app:layout_column="1"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="98dp"
        android:layout_height="98dp"
        app:layout_constraintBottom_toBottomOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="@+id/joystickView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/joystickView2"
        app:layout_constraintTop_toTopOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/button_y1"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:background="@color/button"
            android:backgroundTint="@color/button"
            android:text="^"
            android:visibility="visible"
            app:iconTint="@color/button"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/button_x2"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:background="@color/button"
            android:backgroundTint="@color/button"
            android:text="^"
            android:visibility="visible"
            app:iconTint="@color/button"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_x1"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:background="@color/button"
            android:backgroundTint="@color/button"
            android:text="^"
            android:visibility="visible"
            app:iconTint="@color/button"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/button_y2"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:background="@color/button"
            android:backgroundTint="@color/button"
            android:text="^"
            android:visibility="visible"
            app:iconTint="@color/button"
            app:layout_column="1"
            app:layout_row="2" />
    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>